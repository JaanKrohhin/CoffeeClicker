<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clicker.ClickerScreen">

    <StackLayout Margin="0,10,0,0">
        <Label HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold" Text="Coffee Clicker" TextColor="{Binding TextColour}"></Label>
        <Label x:Name="pointLabel" HorizontalOptions="Center" FontSize="Subtitle" TextColor="{Binding TextColour}"></Label>
        <Label x:Name="multLabel" HorizontalOptions="Center" FontSize="Subtitle" TextColor="{Binding TextColour}"></Label>
        <ImageButton x:Name="imgBtn" CornerRadius="360" HorizontalOptions="Center" Source="coffee.png" Clicked="ImageButton_Clicked" Aspect="Fill" Pressed="ImageButton_Pressed" VerticalOptions="CenterAndExpand" WidthRequest="250" HeightRequest="250" Released="imgBtn_Released"></ImageButton>
    </StackLayout>

</ContentPage>
